@model Choose_Teacher.Models.Certification

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}


<div>
    <h4>Details Certification</h4>
    <hr />
    <dl class="row">
        @if (Context.Session.GetString("adminName") != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher.TeacherName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Teacher.TeacherName)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CertificationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CertificationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssuingAuthority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssuingAuthority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-2">
    </dl>
</div>
<div>
    @if (Context.Session.GetString("adminName") == null)
    {
        <a asp-action="Edit" asp-route-id="@Model?.CertificationId">Edit</a>
        <a asp-action="Index">Back to List</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
