@model CategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}


<h4>Edit @Html.DisplayFor(c=>c.CategoryName)</h4>
<hr />
<img src="~/img/@TempData["categoryImg"]" class="rounded-circle" height="250" width="250" asp-append-version="true" />
<br /><br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"method="post"enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@TempData["categoryId"]" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDesc" class="control-label"></label>
                <textarea asp-for="CategoryDesc" class="form-control"></textarea>
                <span asp-validation-for="CategoryDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryImg" class="control-label"></label>
                <input type="file" asp-for="CategoryImg" class="form-control" />
                <span asp-validation-for="CategoryImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

