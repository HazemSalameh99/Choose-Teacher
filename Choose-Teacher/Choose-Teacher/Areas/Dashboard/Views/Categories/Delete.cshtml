@model Choose_Teacher.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete <span class="text-danger">@Html.DisplayFor(c => c.CategoryName) Material</span>?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryImg)
