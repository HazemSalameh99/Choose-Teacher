@model IEnumerable<Teacher>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardLayout.cshtml";
}

@if (Context.Session.GetString("adminName") != null)
{
    <h1>Teachers</h1>
    <p>
        <a asp-action="Create" class="btn btn-outline-light"> Add Teacher</a>
    </p>
    @if (Model.Any())
    {
        <table class="table table-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.phoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriceOfHour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Loacation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.ImageUrl != null)
                        {
                            <td>
                                <img src="~/img/@item.ImageUrl" class="rounded-circle" height="100" width="100" asp-append-version="true" />
                            </td>
                        }
                        else
                        {
                            <td>
                                <img src="~/img/userProfile.jpg" class="rounded-circle" height="100" width="100" asp-append-version="true" />
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.TeacherName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceOfHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Loacation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.TeacherId">
                                <i class="fas fa-eye"></i>
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.TeacherId">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h1>There are no Teachers</h1>
        </div>
    }
}