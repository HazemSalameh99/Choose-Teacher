<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Choose Teacher</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/Dashboard/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="~/Dashboard/css/styles.css" rel="stylesheet">


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    @if (@Context.Session.GetString("teacherName") != null)
                    {
                        <div class="logo">
                            <h1><a asp-action="Index" asp-controller="Home">@Context.Session.GetString("teacherName")</a></h1>
                        </div>
                    }
                    else if (@Context.Session.GetString("adminName") != null)
                    {
                        <div class="logo">
                            <h1><a asp-action="Index" asp-controller="Home">@Context.Session.GetString("adminName")</a></h1>
                        </div>
                    }

                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">Search</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>
                                    <ul class="dropdown-menu animated fadeInUp">
                                        @if (Context.Session.GetString("teacherName") != null)
                                        {
                                            <li><a asp-action="Edit" asp-controller="Teachers" asp-area="Dashboard" asp-route-id="@Context.Session.GetInt32("teacherId")">Profile</a></li>
                                        }
                                        <li><a asp-action="Logout" asp-controller="Account" asp-area="">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li class="current"><a asp-action="Index" asp-controller="Home" asp-area="Dashboard"><i class="glyphicon glyphicon-home"></i>Home</a></li>
                        @if (@Context.Session.GetString("adminName") != null)
                        {
                            <li><a asp-action="Index" asp-controller="Categories" asp-area="Dashboard"><i class="fas fa-book"></i> Materials</a></li>
                            <li><a asp-action="Index" asp-controller="Teachers" asp-area="Dashboard"><i class="fas fa-chalkboard-teacher"></i>Teachers</a></li>

                        }
                        <li>
                            <a asp-action="Index" asp-controller="Educations">
                                <i class="fas fa-graduation-cap"></i>
                                Education
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Certifications">
                                <i class="fas fa-certificate"></i>
                                Certifications
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Experiences">
                                <i class="fas fa-briefcase"></i>
                                Experiences
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="TeacherAvailabilities">
                                <i class="far fa-calendar-alt"></i>
                                Days Availabilities
                            </a>
                        </li>
                        <li>
                            <a asp-action="Bookings" asp-controller="Bookings">
                                <i class="far fa-calendar-check"></i>
                                Bookings
                            </a>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="glyphicon glyphicon-list"></i> Pages
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                @* @if (Context.Session.GetString("teacherName") != null)
                                {
                                    <li><a href="signup.html">Signup</a></li>
                                } *@
                                <li><a asp-action="Logout" asp-controller="Account" asp-area="">Logot</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="content-box-large">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="container">

            <div class="copy text-center">
                Copyright 2014 <a href='#'>Website</a>
            </div>

        </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Dashboard/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Dashboard/js/custom.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</body>
</html>