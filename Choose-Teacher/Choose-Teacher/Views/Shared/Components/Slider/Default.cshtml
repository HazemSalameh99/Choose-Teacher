@model IEnumerable<Slider>
<!-- slider item -->
@foreach (var item in Model)
{

    <!-- slider item -->
    <div class="hero-slider-item">
        <div class="row">
            <div class="col-md-8">
                <h1 class="text-white" data-animation-out="fadeOutRight" data-delay-out="5" data-duration-in=".3" data-animation-in="fadeInLeft" data-delay-in=".1">@item.Title</h1>
                <p class="text-muted mb-4" data-animation-out="fadeOutRight" data-delay-out="5" data-duration-in=".3" data-animation-in="fadeInLeft" data-delay-in=".4">
                  @item.SubTitle
                </p>
            </div>
        </div>
    </div>

}
